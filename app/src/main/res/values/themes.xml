<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Calcolator" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/brand</item>
        <item name="colorPrimaryVariant">@color/brand</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/background</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="calcbtn" >
        <item name="android:textSize">@dimen/textn</item>
    </style>
    <style name="calcbtn.num" >
        <item name="android:background">@drawable/circleb_w</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="calcbtn.op" >
        <item name="android:background">@drawable/circleb</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <dimen name="textn">20sp</dimen>
    <dimen name="textg">40sp</dimen>
</resources>